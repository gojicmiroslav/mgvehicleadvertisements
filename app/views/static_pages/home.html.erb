<div class="row">
	<div class="col-md-8">
		<h3>Categories</h3>

		<div class="btn-group btn-group-justified" role="group">
				<% @categories.each do |category| %>
				  <div class="btn-group" role="group">
				    <button type="button" class="btn btn-default"><%= category.name %></button>
				  </div>
			  <% end %>
		</div>

		<hr />

		<div class="row">
			<% @advertisements.each do |advertisement| %>
				<div class="col-md-4">
				
					<%= link_to advertisement do %>
						<div class="thumbnail">
							<% image = advertisement.images? ? advertisement.images[0].thumb_middle.url : "placeholder.png" %>
							<%= image_tag(image, class: "img-responsive") %>

							<div class="caption">
								<h3><%= advertisement.title %></h3>
								<p><b>Price:</b> <%= number_with_precision advertisement.price, precision: 2 %></p>
								<p><b>Category:</b> <%= advertisement.category.name %></p>
							</div>
						</div>
					<% end %>

					
				</div>
			<% end %>
		</div>
	</div>

	<div class="col-md-4">

	</div>
</div>
