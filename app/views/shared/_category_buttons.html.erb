<div class="btn-group btn-group-justified" role="group">
	<% @categories.each do |category| %>
	  <div class="btn-group" role="group">
	  	<% if category.name.eql?("Cars") %>
				<%= link_to category.name, root_path, class: "btn btn-primary", type: "button", disabled: get_disabled_state(category) %>
	  	<% else %>
	  		<%= link_to category.name, category, class: "btn btn-primary", type: "button", disabled: get_disabled_state(category) %>
  		<% end %>
	  </div>
  <% end %>
</div>